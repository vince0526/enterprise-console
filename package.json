{
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "lint:md": "markdownlint --ignore node_modules --ignore vendor \"**/*.md\"",
    "format": "prettier \"**/*.{js,jsx,ts,tsx,css,scss,md,json,yml,yaml}\" --write",
    "format:check": "prettier \"**/*.{js,jsx,ts,tsx,css,scss,md,json,yml,yaml}\" --check",
    "prepare": "husky"
  },
  "devDependencies": {
    "@types/react": "^18.3.9",
    "@types/react-dom": "^19.2.0",
    "@vitejs/plugin-react": "^4.3.3",
    "@tailwindcss/forms": "^0.5.10",
    "autoprefixer": "^10.4.20",
    "axios": "^1.7.7",
    "laravel-vite-plugin": "^2.0.1",
    "postcss": "^8.4.47",
    "tailwindcss": "^3.4.10",
    "vite": "^7.1.7",
    "markdownlint-cli": "^0.42.0",
    "prettier": "^3.3.3",
    "husky": "^9.1.6",
    "lint-staged": "^15.2.10"
  },
  "dependencies": {
    "alpinejs": "^3.15.0",
    "react": "^18.3.1",
    "react-dom": "^19.2.0"
  },
  "engines": {
    "node": ">=20.19 <21 || >=22.12 <23"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,css,scss,md,json,yml,yaml}": [
      "prettier --write"
    ],
    "*.php": [
      "vendor/bin/pint --dirty"
    ]
  }
}
