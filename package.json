{
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "lint:md": "markdownlint --ignore node_modules --ignore vendor \"**/*.md\"",
    "format": "prettier \"**/*.{js,jsx,ts,tsx,css,scss,md,json,yml,yaml}\" --write",
    "format:check": "prettier \"**/*.{js,jsx,ts,tsx,css,scss,md,json,yml,yaml}\" --check",
    "prepare": "husky"
  },
  "devDependencies": {
    "prismjs": "^1.29.0",
    "@tailwindcss/forms": "^0.5.11",
    "@tailwindcss/postcss": "^4.1.18",
    "@types/react": "^19.2.8",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.1.2",
    "autoprefixer": "^10.4.23",
    "axios": "^1.13.3",
    "husky": "^9.1.6",
    "laravel-vite-plugin": "^2.1.0",
    "lint-staged": "^16.2.7",
    "markdownlint-cli": "^0.47.0",
    "postcss": "^8.4.47",
    "prettier": "^3.8.1",
    "tailwindcss": "^4.1.18",
    "vite": "^7.3.1"
  },
  "dependencies": {
    "alpinejs": "^3.15.3",
    "react": "^19.2.0",
    "react-dom": "^19.2.3"
  },
  "engines": {
    "node": ">=20.19 <21 || >=22.12 <23"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,css,scss,md,json,yml,yaml}": [
      "prettier --write"
    ],
    "*.php": [
      "php ./vendor/bin/pint --dirty"
    ]
  }
}
