{
  "$schema": "https://getcomposer.org/schema.json",
  "name": "laravel/laravel",
  "type": "project",
  "description": "The skeleton application for the Laravel framework.",
  "keywords": [
    "laravel",
    "framework"
  ],
  "license": "MIT",
  "require": {
    "php": "^8.2",
    "laravel/framework": "^12.0",
    "laravel/sanctum": "^4.2",
    "laravel/socialite": "^5.23",
    "laravel/tinker": "^2.10.1",
    "spatie/laravel-permission": "^6.21"
  },
  "require-dev": {
    "barryvdh/laravel-ide-helper": "^3.6",
    "fakerphp/faker": "^1.23",
    "larastan/larastan": "3.8.0",
    "laravel/breeze": "^2.3",
    "laravel/pail": "^1.2.2",
    "laravel/pint": "^1.24",
    "laravel/sail": "^1.41",
    "laravel/telescope": "^5.11",
    "mockery/mockery": "^1.6",
    "nunomaduro/collision": "^8.6",
    "pestphp/pest": "^3.8",
    "pestphp/pest-plugin-laravel": "^3.2",
    "phiki/phiki": "2.0.5",
    "phpunit/phpunit": "^11.5.3"
  },
  "autoload": {
    "psr-4": {
      "App\\": "app/",
      "Database\\Factories\\": "database/factories/",
      "Database\\Seeders\\": "database/seeders/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Tests\\": "tests/"
    }
  },
  "scripts": {
    "post-create-project-cmd": [
      "@php artisan key:generate --ansi",
      "@php -r \"file_exists('database/database.sqlite') || touch('database/database.sqlite');\"",
      "@php artisan migrate --graceful --ansi"
    ],
    "lint": "pint",
    "post-root-package-install": [
      "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
    ],
    "stan": "phpstan analyse --memory-limit=512M",
    "check": "pint && phpstan analyse --memory-limit=512M",
    "test": "php artisan test",
    "test:quick": "php artisan test --parallel --recreate-databases --filter=\"ExampleTest|HealthTest\"",
    "post-update-cmd": [],
    "post-autoload-dump": [
      "Illuminate\\Foundation\\ComposerScripts::postAutoloadDump",
      "@php artisan package:discover --ansi"
    ],
    "dev": [
      "Composer\\Config::disableProcessTimeout",
      "npx concurrently -c \"#93c5fd,#c4b5fd,#fb7185,#fdba74\" \"php artisan serve\" \"php artisan queue:listen --tries=1\" \"php artisan pail --timeout=0\" \"npm run dev\" --names=server,queue,logs,vite --kill-others"
    ],
    "check-all": "pint && phpstan analyse --memory-limit=512M && php artisan test",
    "quality": "@check-all",
    "ide-helper": [
      "@php artisan ide-helper:generate",
      "@php artisan ide-helper:models --nowrite",
      "@php artisan ide-helper:meta"
    ],
    "ide-helper:fast": [
      "@php artisan ide-helper:generate",
      "@php artisan ide-helper:models --nowrite"
    ],
    "ide-helper:meta": "@php artisan ide-helper:meta",
    "ide-helper:meta:win": [
      "powershell -NoProfile -ExecutionPolicy Bypass -File scripts/ide-helper-meta.ps1"
    ]
  },
  "extra": {
    "laravel": {
      "dont-discover": []
    }
  },
  "config": {
    "sort-packages": true,
    "optimize-autoloader": true,
    "preferred-install": "dist",
    "platform": {
      "php": "8.3"
    },
    "allow-plugins": {
      "pestphp/pest-plugin": true,
      "php-http/discovery": true
    }
  },
  "minimum-stability": "stable",
  "prefer-stable": true
}
